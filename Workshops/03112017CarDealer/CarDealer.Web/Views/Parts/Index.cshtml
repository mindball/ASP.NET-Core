@model PartPageListingViewModel

@{
    ViewData["Title"] = "All parts";
}

<h2>@ViewData["Title"]</h2>

@{
    var previousDisable = Model.CurrentPage == 1 ? "disable" : string.Empty;
    var nextDisable = Model.CurrentPage == Model.TotalPages ? "disable" : string.Empty;
}

<ul class="pagination">
    <li class="page-item @previousDisable">
        <a class="page-link @previousDisable" href="/parts/index/?page=@Model.PreviousPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i < Model.TotalPages; i++)
    {
        <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="/parts/index/?page=@i">@i</a></li>

    }
    <li class="page-item @nextDisable">
        <a class="page-link @nextDisable" href="/parts/index/?page=@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>

<table class="table table-bordered table-hover">
    <thead class="">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Supplier Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
            foreach (var part in Model.Parts)
            {
                <tr>
                    <th scope="row">@index</th>
                    <td>@part.Name</td>
                    <td>@part.Price</td>
                    <td>@part.Quantity</td>
                    <td>@part.SupplierName</td>
                    <td>
                        <a class="btn btn-info" href="#" role="button">Edit</a>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>
<ul class="pagination">
    <li class="page-item @previousDisable">
        <a class="page-link @previousDisable" href="/parts/index/?page=@Model.PreviousPage" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i < Model.TotalPages; i++)
    {
        <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="/parts/index/?page=@i">@i</a></li>     
    }
    <li class="page-item @nextDisable">
        <a class="page-link @nextDisable" href="/parts/index/?page=@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>