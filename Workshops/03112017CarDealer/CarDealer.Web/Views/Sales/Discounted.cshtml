@model IEnumerable<SaleModel>

@{
    ViewData["Title"] = "Sales with discount";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead class="">
        <tr>
            <th>#</th>
            <th>Customer Name</th>
            <th>Car make</th>
            <th>Car model</th>
            <th>Travelled Distance</th>
            <th>Price</th>
            <th>Discount</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
            foreach (var sale in Model)
            {
                <tr>
                    <th scope="row">@index</th>
                    <td>@sale.CustomerName</td>
                    <td>@sale.CarMaked.CarMake</td>
                    <td>@sale.CarMaked.Model</td>
                    <td>@sale.CarMaked.TravelledDistance</td>
                    <td>@sale.TotalPrice</td>
                    <td>@sale.Discount</td>
                    <td>
                        <a class="btn btn-sm btn-dark"   href="/sales/@(sale.SaleId.ToString())">Sales detail</a>
                    </td>
                </tr>
                index++;
            }
        }
    </tbody>
</table>
                