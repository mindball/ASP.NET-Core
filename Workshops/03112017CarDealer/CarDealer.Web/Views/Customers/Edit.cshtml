@model CustomerViewModel

<form method="post" class="form-horizontal" style="margin-top: 40px">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-1 control-label">Name</label>
        <div class="col-sm-4">
            <input type="text" asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="form-text text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Birthday" class="col-sm-1 control-label">Birthday</label>
        <div class="col-sm-4">
            <input type="date" asp-for="Birthday" class="form-control" placeholder="Birthday">
            <span asp-validation-for="Birthday" class="form-text text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10">
            <button type="submit" class="btn btn-success">Save Customer</button>
        </div>
    </div>
</form>