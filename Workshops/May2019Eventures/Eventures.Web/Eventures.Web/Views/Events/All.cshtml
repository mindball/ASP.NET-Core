@model IEnumerable<EventServiceModel>

@{
    ViewData["Title"] = "All Events";
    const string dateFormat = "dd-MMM-yyyy hh:mm:ss";
    int i = 1;
}

<main class="mt-3 mb-5 container">
    <h1 class="text-center">All Events</h1>
    <hr class="hr-2 eventures-bg-color" />
    <table class="table table-hover">
        <thead>
            <tr class="row font-weight-bold">
                <th class="col-md-1">#</th>
                <th class="col-md-5">Name</th>
                <th class="col-md-2">Start</th>
                <th class="col-md-2">End</th>
                <th class="col-md-2">Place</th>
            </tr>
        </thead>
        <tbody>            
            @foreach(var item in Model)
            {               

                <tr class="row">
                    <th class="col-md-1">@(i + 1)</th>
                    <td class="col-md-5">@item.Name</td>
                    <td class="col-md-2">@item.StartDate.ToString(dateFormat)</td>
                    <td class="col-md-2">@item.EndDate.ToString(dateFormat)</td>
                    <td class="col-md-2">@item.Place</td>
                </tr>
            }
        </tbody>
    </table>
    <hr class="hr-2 eventures-bg-color" />

</main> 